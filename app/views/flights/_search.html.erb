<%= form_with url: :flights, method: :get, class: "search" do |form| %>
    <div class="row">
        <%= form.label :departure_airport_id %>
        <%= form.select :departure_airport_id, airport_options %>
    </div>
    <div class="row">
        <%= form.label :arrival_airport_id %>
        <%= form.select :arrival_airport_id, airport_options %>
    </div>
    <div class="row">
        <%= form.label :date %>
        <%= form.date_field :date %>
    </div>
    <div class="row">
        <%= form.label :num_passengers %>
        <%= form.select :num_passengers, num_passengers_options %>
    </div>
    <div class="row search-row"><%= form.submit "Search" %></div>
<% end %>